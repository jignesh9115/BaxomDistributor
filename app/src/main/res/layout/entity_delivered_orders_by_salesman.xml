<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ll_shop_list_by_salesman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_shop_photo_delivered_order_by_salesman"
            android:layout_width="70dp"
            android:layout_height="90dp"
            android:layout_margin="1dp"
            android:scaleType="fitXY"
            android:src="@drawable/notfoundimages" />

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_shop_name_delivered_order_by_salesman"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:lines="1"
                android:paddingStart="2dp"
                android:text=""
                android:textColor="@color/textPrimary"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/tv_order_amount_delivered_order_by_salesman"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:lines="1"
                android:paddingStart="2dp"
                android:text=""
                android:textColor="@color/textPrimary"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_delivery_amount_undelivered_order_by_salesman"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:lines="1"
                android:paddingStart="2dp"
                android:text=""
                android:textColor="@color/textPrimary"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="90dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_btn_shop_location_delivered_order_by_salesman"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:src="@drawable/icon_place_marker" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_vertical"
                android:background="@color/colorPrimary"/>

            <ImageView
                android:id="@+id/img_call_delivered_order_by_salesman"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_call_green" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:padding="1dp">

        <TextView
            android:id="@+id/tv_delivered_order_status"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="#64D568"
            android:paddingStart="5dp"
            android:gravity="center_vertical"
            android:textSize="10dp"
            android:text="Delivery Rs.: " />

    </LinearLayout>


</LinearLayout>