<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="356dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_first_layout"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        android:paddingBottom="1dp">

        <LinearLayout
            android:id="@+id/ll_order_detail"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--  <TextView
                      android:layout_width="50dp"
                      android:layout_height="match_parent"
                      android:background="@color/colorPrimary"
                      android:gravity="center"
                      android:text="1"
                      android:textColor="@color/white" />-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:orientation="vertical"
                    android:paddingLeft="1dp"
                    android:paddingTop="1dp"
                    android:paddingRight="1dp"
                    android:paddingBottom="1dp">


                    <TextView
                        android:id="@+id/tv_dist_name_purchase_order"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:lines="2"
                        android:padding="3dp"
                        android:text="DIST NAME-TOWN NAME"
                        android:textColor="@color/textPrimary"
                        android:textSize="11dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_order_date_purchase_order"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="1dp"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:padding="3dp"
                        android:text="ORDER DATE AND TIME"
                        android:textColor="@color/textPrimary"
                        android:textSize="10dp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:orientation="vertical"
                android:paddingLeft="1dp"
                android:paddingRight="1dp"
                android:paddingBottom="1dp">


                <TextView
                    android:id="@+id/tv_order_status_purchase_order"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:lines="2"
                    android:paddingStart="5dp"
                    android:text="STATUS:VERIFICATION DONE / PEDING AUTHENTICATION DONE / PENDING ORDER IN PACKING SHIPPED"
                    android:textColor="@color/textPrimary"
                    android:textSize="10dp" />

                <LinearLayout
                    android:id="@+id/ll_shipping_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp">

                    <TextView
                        android:id="@+id/tv_shipping_date_title"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:background="@color/white"
                        android:gravity="center"
                        android:lines="1"
                        android:padding="3dp"
                        android:text="@string/entitypurchaseorder_shippin_date"
                        android:textColor="@color/textPrimary"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/tv_shipping_date_purchase_order"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:drawableRight="@drawable/calender_icon_16"
                        android:enabled="false"
                        android:gravity="center"
                        android:lines="1"
                        android:padding="3dp"
                        android:text="26-10-2020"
                        android:textColor="@color/textPrimary"
                        android:textSize="10dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp">

                    <TextView
                        android:id="@+id/tv_transporter_title"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:background="@color/white"
                        android:gravity="center"
                        android:lines="1"
                        android:padding="3dp"
                        android:text="@string/entitypurchaseorder_transporter"
                        android:textColor="@color/textPrimary"
                        android:textSize="10dp" />

                    <EditText
                        android:id="@+id/edt_transporter_name_purchase_order"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:enabled="false"
                        android:gravity="center_vertical"
                        android:inputType="text"
                        android:lines="1"
                        android:padding="3dp"
                        android:text=""
                        android:textColor="@color/textPrimary"
                        android:textSize="10dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp">

                    <TextView
                        android:id="@+id/tv_contact1_title"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:background="@color/white"
                        android:gravity="center"
                        android:lines="1"
                        android:padding="3dp"
                        android:text="@string/entitypurchaseorder_transporter_contact_1"
                        android:textColor="@color/textPrimary"
                        android:textSize="10dp" />

                    <EditText
                        android:id="@+id/edt_transporter_contact1_purchase_order"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:enabled="false"
                        android:gravity="center_vertical"
                        android:inputType="numberDecimal"
                        android:lines="1"
                        android:maxLength="10"
                        android:padding="3dp"
                        android:text=""
                        android:textColor="@color/textPrimary"
                        android:textSize="10dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp">

                    <TextView
                        android:id="@+id/tv_contact2_title"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:background="@color/white"
                        android:gravity="center"
                        android:lines="1"
                        android:padding="3dp"
                        android:text="@string/entitypurchaseorder_transporter_contact_2"
                        android:textColor="@color/textPrimary"
                        android:textSize="10dp" />

                    <EditText
                        android:id="@+id/edt_transporter_contact2_purchase_order"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:enabled="false"
                        android:gravity="center_vertical"
                        android:inputType="numberDecimal"
                        android:lines="1"
                        android:maxLength="10"
                        android:padding="3dp"
                        android:text=""
                        android:textColor="@color/textPrimary"
                        android:textSize="10dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/tv_article_title"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:background="@color/white"
                        android:gravity="center"
                        android:lines="1"
                        android:padding="3dp"
                        android:text="@string/entitypurchaseorder_article"
                        android:textColor="@color/textPrimary"
                        android:textSize="10dp" />

                    <EditText
                        android:id="@+id/edt_noofarticle_purchase_order"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:enabled="false"
                        android:gravity="center_vertical"
                        android:inputType="numberDecimal"
                        android:lines="1"
                        android:padding="3dp"
                        android:text=""
                        android:textColor="@color/textPrimary"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/tv_lr_symbol"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="1dp"
                        android:background="@drawable/button_border_rectangle"
                        android:gravity="center"
                        android:lines="1"
                        android:padding="5dp"
                        android:text="LR SYMBOL"
                        android:textColor="@color/textPrimary"
                        android:textSize="10dp" />

                </LinearLayout>

                <!-- <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="1dp">

                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="match_parent"
                         android:layout_gravity="center_vertical"
                         android:background="@color/white"
                         android:gravity="center"
                         android:lines="1"
                         android:padding="3dp"
                         android:text="ARTICLE :"
                         android:textColor="@color/textPrimary"
                         android:textSize="10dp" />

                     <EditText
                         android:id="@+id/edt_noofarticle_purchase_order"
                         android:layout_width="0dp"
                         android:layout_height="wrap_content"
                         android:layout_gravity="center_vertical"
                         android:layout_weight="1"
                         android:background="@color/white"
                         android:enabled="false"
                         android:gravity="center_vertical"
                         android:inputType="numberDecimal"
                         android:lines="1"
                         android:padding="3dp"
                         android:text=""
                         android:textColor="@color/textPrimary"
                         android:textSize="10dp" />

                 </LinearLayout>-->


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp">

                    <TextView
                        android:id="@+id/tv_orderrs_title"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:background="@color/white"
                        android:gravity="center"
                        android:lines="1"
                        android:padding="3dp"
                        android:text="@string/entitypurchaseorder_order_rs"
                        android:textColor="@color/textPrimary"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/tv_billing_amount_purchase_order"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:lines="1"
                        android:padding="3dp"
                        android:text=""
                        android:textColor="@color/textPrimary"
                        android:textSize="10dp" />


                    <TextView
                        android:id="@+id/tv_billingrs_title"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:background="@color/white"
                        android:gravity="center"
                        android:lines="1"
                        android:padding="3dp"
                        android:text="@string/entitypurchaseorder_billing_rs"
                        android:textColor="@color/textPrimary"
                        android:textSize="10dp" />

                    <EditText
                        android:id="@+id/edt_billing_amount"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:enabled="false"
                        android:gravity="center_vertical"
                        android:inputType="numberDecimal"
                        android:lines="1"
                        android:padding="3dp"
                        android:text=""
                        android:textColor="@color/textPrimary"
                        android:textSize="10dp" />


                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@color/colorPrimary"
            android:orientation="vertical"
            android:padding="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_product_minus_qty_add_purchase_order"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:enabled="false"
                    android:src="@drawable/icon_minus" />

                <EditText
                    android:id="@+id/edt_cartoon_qty_purchase_order"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/colorPrimary"
                    android:digits="0123456789"
                    android:enabled="false"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:maxLength="3"
                    android:text="0"
                    android:textColor="@color/textPrimary"
                    android:textSize="9sp" />


                <ImageView
                    android:id="@+id/img_product_plus_qty_add_purchase_order"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:enabled="false"
                    android:src="@drawable/icon_add" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="1dp"
                android:background="@color/white">

                <Button
                    android:id="@+id/btn_generate_pdf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="GENERATE \nPDF"
                    android:textSize="9sp"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white">

                <Button
                    android:id="@+id/tv_next_order_status_purchase_order"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp"
                    android:gravity="center"
                    android:text="IN PACKING"
                    android:textColor="@color/white"
                    android:textSize="10dp" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:background="@color/colorDivider" />

</LinearLayout>