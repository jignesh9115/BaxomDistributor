<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.UpdateShopActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/addnewshop_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary">

            <ImageView
                android:id="@+id/img_back_updateshop"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_arrow_left_white" />

            <TextView
                android:id="@+id/tv_screen_heading_editshop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/img_back_updateshop"
                android:padding="10sp"
                android:text="@string/updateshop_txt_titlebar_heading"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20sp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="40dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20sp">

                    <LinearLayout
                        android:layout_width="250dp"
                        android:layout_height="200dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/button_border_rectangle"
                        android:padding="10dp">

                        <ImageView
                            android:id="@+id/img_shop_photo_updateshop"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/icon_shop_location" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_shop_name_title_editshop"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="10sp"
                            android:text="@string/updateshop_txt_title_shop_name"
                            android:textColor="@color/textPrimary"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_shop_name_required"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="13dp"
                            android:text="*"
                            android:textColor="#F44336"
                            android:textSize="20dp" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/edttext_border_rectangle_no_padding">

                        <EditText
                            android:id="@+id/edt_shop_title_updateshop"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="1dp"
                            android:background="#FFFFFF"
                            android:focusable="false"
                            android:hint="@string/updateshop_txt_hint_shop_name"
                            android:inputType="text"
                            android:paddingStart="5dp"
                            android:textSize="14sp" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <!--android:id="@+id/address"-->

                        <TextView
                            android:id="@+id/tv_address_title_editshop"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="10sp"
                            android:text="@string/updateshop_txt_title_address"
                            android:textColor="@color/textPrimary"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_shop_address_required"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="13dp"
                            android:text="*"
                            android:textColor="#F44336"
                            android:textSize="20dp" />


                    </LinearLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/edttext_border_rectangle_no_padding">

                        <EditText
                            android:id="@+id/edt_shop_address_updateshop"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="1dp"
                            android:background="@color/white"
                            android:focusable="false"
                            android:gravity="top|left"
                            android:hint="@string/updateshop_txt_hint_address"
                            android:inputType="text|textMultiLine"
                            android:lines="8"
                            android:maxLines="10"
                            android:minLines="6"
                            android:paddingStart="5dp"
                            android:scrollbars="vertical"
                            android:textSize="14sp" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_contact_person_name_title_editshop"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="10sp"
                            android:text="@string/updateshop_txt_title_contact_person_name"
                            android:textColor="@color/textPrimary"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_shop_contact_person_name_required"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="13dp"
                            android:text="*"
                            android:textColor="#F44336"
                            android:textSize="20dp" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/edttext_border_rectangle_no_padding">

                        <EditText
                            android:id="@+id/edt_shop_keeper_name_updateshop"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="1dp"
                            android:background="@color/white"
                            android:focusable="false"
                            android:hint="@string/updateshop_txt_hint_contact_person_name"
                            android:inputType="text"
                            android:paddingStart="5dp"
                            android:textSize="14sp" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_contact1_title_editshop"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="10sp"
                            android:text="@string/updateshop_txt_title_contact_number_1"
                            android:textColor="@color/textPrimary"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_contact1_required"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="13dp"
                            android:text="*"
                            android:textColor="#F44336"
                            android:textSize="20dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/edttext_border_rectangle_no_padding">

                        <EditText
                            android:id="@+id/edt_shop_keeper_no1_updateshop"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="1dp"
                            android:background="@color/white"
                            android:focusable="false"
                            android:hint="@string/updateshop_txt_hint_contact_number_1"
                            android:inputType="number"
                            android:maxLength="10"
                            android:paddingStart="5dp"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_contact2_title_editshop"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="10sp"
                            android:text="@string/updateshop_txt_title_contact_number_2"
                            android:textColor="@color/textPrimary"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_contact2_required"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="13dp"
                            android:text="*"
                            android:textColor="#F44336"
                            android:textSize="20dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/edttext_border_rectangle_no_padding">

                        <EditText
                            android:id="@+id/edt_shop_keeper_no2_updateshop"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="1dp"
                            android:background="@color/white"
                            android:focusable="false"
                            android:hint="@string/updateshop_txt_hint_contact_number_2"
                            android:inputType="number"
                            android:maxLength="10"
                            android:paddingStart="5dp"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_shopcategory_title_editshop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="10sp"
                        android:text="@string/updateshop_txt_title_shop_category"
                        android:textColor="@color/textPrimary"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="10sp"
                        android:background="@drawable/spinner_border">

                        <Spinner
                            android:id="@+id/spn_shop_category_updateshop"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </LinearLayout>


                    <TextView
                        android:id="@+id/tv_invoicetype_title_editshop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="10sp"
                        android:text="@string/updateshop_txt_title_invoice_type"
                        android:textColor="@color/textPrimary"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="10sp"
                        android:background="@drawable/spinner_border">

                        <Spinner
                            android:id="@+id/spn_shop_invoice_type_updateshop"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_gstno_title_editshop"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="10sp"
                            android:text="@string/updateshop_txt_title_gst_no"
                            android:textColor="@color/textPrimary"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_gst_star_updateshop"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="13dp"
                            android:text="*"
                            android:textColor="#F44336"
                            android:textSize="20dp" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/edttext_border_rectangle"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/edt_shop_gstno_updateshop"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:focusable="false"
                            android:hint="@string/updateshop_txt_hint_gst_no"
                            android:inputType="text"
                            android:maxLength="15"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <Button
                            android:id="@+id/btn_verify_gstno_updateshop"
                            android:layout_width="230dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:enabled="false"
                            android:text="@string/updateshop_btn_title_verify_gst" />


                        <!-- <ImageView
                             android:id="@+id/img_edit_shop"
                             android:layout_width="50dp"
                             android:layout_height="50dp"
                             android:layout_gravity="center_vertical"
                             android:layout_marginLeft="10dp"
                             android:layout_marginTop="5dp"
                             android:src="@drawable/edit_icon" />-->

                    </LinearLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <Button
                            android:id="@+id/btn_update_shop"
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:text="@string/updateshop_btn_title_update" />

                        <Button
                            android:id="@+id/btn_delete_shop"
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="@string/updateshop_btn_title_delete" />

                    </RelativeLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>


</LinearLayout>