<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.ViewSalesOrderActivity">

    <!-- ========================title bar layout start===================== -->

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/shoporder_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary">

            <ImageView
                android:id="@+id/img_back_sales_order"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_arrow_left_white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/img_back_sales_order"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tv_title_sales_order"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:text="@string/viewsalesorder_txt_titlebar_heading"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_distributor_name_salesorder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <!-- =======================shop rs. start======================== -->

    <LinearLayout
        android:layout_width="356dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="5dp"
        android:background="@color/textPrimary"
        android:orientation="horizontal"
        android:paddingStart="1dp"
        android:paddingTop="1dp"
        android:paddingEnd="1dp"
        android:paddingBottom="1dp">

        <TextView
            android:id="@+id/tv_this_orderrs_title_viewsales"
            android:layout_width="94dp"
            android:layout_height="20dp"
            android:background="#FFE6E6"
            android:gravity="center"
            android:text="@string/viewsalesorder_txt_title_this_order_rs"
            android:textColor="@color/textPrimary"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/tv_total_order_rs_sales_order"
            android:layout_width="67.5dp"
            android:layout_height="20dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:background="#FFE6E6"
            android:ellipsize="marquee"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/textPrimary"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/tv_thisedeliveryrs_title_viewsales"
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:layout_marginRight="1dp"
            android:background="#FFE6E6"
            android:gravity="center"
            android:text="@string/viewsalesorder_txt_title_this_delivery_rs"
            android:textColor="@color/textPrimary"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/tv_delivery_rs_sales_order"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="#FFE6E6"
            android:ellipsize="marquee"
            android:gravity="center"
            android:singleLine="true"
            android:text="0.0"
            android:textColor="@color/textPrimary"
            android:textSize="10dp" />


    </LinearLayout>
    <!-- =======================shop rs. end======================== -->


    <!-- =======================second layout starts======================== -->

    <LinearLayout
        android:layout_width="356dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:background="@color/textPrimary"
        android:orientation="horizontal"
        android:paddingStart="1dp"
        android:paddingEnd="1dp"
        android:paddingBottom="1dp">

        <TextView
            android:id="@+id/tv_orderdatetime_title_viewsales"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="2"
            android:background="#FFE6E6"
            android:gravity="center"
            android:text="@string/viewsalesorder_txt_title_order_datetime"
            android:textColor="@color/textPrimary"
            android:textSize="10dp" />


        <TextView
            android:id="@+id/tv_deliverydatetime_title_viewsales"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="2"
            android:background="#FFE6E6"
            android:gravity="center"
            android:text="@string/viewsalesorder_txt_title_delivery_datetime"
            android:textColor="@color/textPrimary"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/tv_orderno_title_viewsales"
            android:layout_width="69dp"
            android:layout_height="20dp"
            android:background="#FFE6E6"
            android:ellipsize="marquee"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/viewsalesorder_txt_title_order_no"
            android:textColor="@color/textPrimary"
            android:textSize="10dp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="356dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:background="@color/textPrimary"
        android:orientation="horizontal"
        android:paddingStart="1dp"
        android:paddingEnd="1dp"
        android:paddingBottom="1dp">

        <TextView
            android:id="@+id/tv_order_datetime_sales_order"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="2"
            android:background="#FFE6E6"
            android:gravity="center"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/textPrimary"
            android:textSize="10dp" />


        <TextView
            android:id="@+id/tv_delivery_datetime_sales_order"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="2"
            android:background="#FFE6E6"
            android:gravity="center"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/textPrimary"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/tv_order_no_sales_order"
            android:layout_width="69dp"
            android:layout_height="20dp"
            android:background="#FFE6E6"
            android:gravity="center"
            android:maxLines="1"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/textPrimary"
            android:textSize="10dp" />


    </LinearLayout>


    <!-- =======================second layout end======================== -->

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- =======================shop details start======================== -->
            <LinearLayout
                android:layout_width="356dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:background="@color/textPrimary"
                android:orientation="horizontal"
                android:paddingStart="1dp"
                android:paddingEnd="1dp"
                android:paddingBottom="1dp">

                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/tv_shop_name_title_viewsales"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:background="@color/white"
                        android:gravity="center"
                        android:text="@string/viewsalesorder_txt_title_shop_name"
                        android:textColor="@color/textPrimary"
                        android:textSize="9sp" />

                    <TextView
                        android:id="@+id/tv_contactperson_title_viewsales"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginTop="1dp"
                        android:background="@color/white"
                        android:gravity="center"
                        android:text="@string/viewsalesorder_txt_title_contact_person"
                        android:textColor="@color/textPrimary"
                        android:textSize="9dp" />

                    <TextView
                        android:id="@+id/tv_lastorderrs_title_viewsales"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginTop="1dp"
                        android:background="@color/white"
                        android:gravity="center"
                        android:text="@string/viewsalesorder_txt_title_last_order_rs"
                        android:textColor="@color/textPrimary"
                        android:textSize="9sp" />

                    <TextView
                        android:id="@+id/tv_last3visit_title_viewsales"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginTop="1dp"
                        android:background="@color/white"
                        android:gravity="center"
                        android:text="@string/viewsalesorder_txt_title_last_3_visit_average"
                        android:textColor="@color/textPrimary"
                        android:textSize="9dp" />

                    <TextView
                        android:id="@+id/tv_last10visit_title_viewsales"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginTop="1dp"
                        android:background="@color/white"
                        android:gravity="center"
                        android:text="@string/viewsalesorder_txt_title_last_10_visit_average"
                        android:textColor="@color/textPrimary"
                        android:textSize="9sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="1dp">


                    <TextView
                        android:id="@+id/tv_shop_name_sales_order"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:background="@color/white"
                        android:ellipsize="marquee"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/textPrimary"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/tv_shop_contact_person_name_sales_order"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginTop="1dp"
                        android:background="@color/white"
                        android:ellipsize="marquee"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/textPrimary"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/tv_shop_last_order_rs_sales_order"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginTop="1dp"
                        android:background="@color/white"
                        android:ellipsize="marquee"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/textPrimary"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/tv_shop_last_3_visit_avg_sales_order"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginTop="1dp"
                        android:background="@color/white"
                        android:ellipsize="marquee"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/textPrimary"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/tv_shop_last_10_visit_avg_sales_order"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginTop="1dp"
                        android:background="@color/white"
                        android:ellipsize="marquee"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/textPrimary"
                        android:textSize="10sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1dp"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_shop_photo_sales_order"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="2dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/imagenotfoundicon" />

                    <LinearLayout
                        android:id="@+id/ll_shop_location_sales_order"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/textPrimary"
                        android:paddingTop="1dp">


                        <ImageView
                            android:id="@+id/img_shop_location"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:src="@drawable/icon_place_marker" />

                        <ImageView
                            android:id="@+id/img_shop_data"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="1dp"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:src="@drawable/icon_shop" />


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
            <!-- =======================shop details end========================-->


            <!-- =======================fourth layout starts========================-->

            <LinearLayout
                android:layout_width="356dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:paddingStart="1dp"
                android:paddingEnd="1dp"
                android:paddingBottom="1dp">

                <Button
                    android:id="@+id/btn_available_title_viewsales"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:text="@string/viewsalesorder_btn_title_available_product_list_icon"
                    android:textSize="10dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/layout_border_rectangle">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimary"
                        android:orientation="horizontal"
                        android:padding="1dp">

                        <TextView
                            android:id="@+id/tv_delivery_title_viewsales"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:rotation="270"
                            android:text="@string/viewsalesorder_txt_title_delivery"
                            android:textColor="@color/white"
                            android:textSize="9dp" />

                        <!-- android:text="D\nE\nL\nI\nV\nE\nR\nY"-->
                        <!-- android:text="D\nE\nL\nI\nV\nE\nR\nY"-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/tv_attempt_title_viewsales"
                                    android:layout_width="0dp"
                                    android:layout_height="20dp"
                                    android:layout_weight="1"
                                    android:background="@color/white"
                                    android:gravity="center"
                                    android:text="@string/viewsalesorder_txt_title_attempt"
                                    android:textColor="@color/textPrimary"
                                    android:textSize="10dp" />


                                <TextView
                                    android:id="@+id/tv_del_attempt"
                                    android:layout_width="0dp"
                                    android:layout_height="20dp"
                                    android:layout_marginLeft="1dp"
                                    android:layout_marginRight="1dp"
                                    android:layout_weight="2"
                                    android:background="@color/white"
                                    android:gravity="center"
                                    android:lines="1"
                                    android:text=""
                                    android:textColor="@color/textPrimary"
                                    android:textSize="10dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="1dp">

                                <TextView
                                    android:id="@+id/tv_business_title_viewsales"
                                    android:layout_width="0dp"
                                    android:layout_height="20dp"
                                    android:layout_weight="1"
                                    android:background="@color/white"
                                    android:gravity="center"
                                    android:text="@string/viewsalesorder_txt_title_bussiness"
                                    android:textColor="@color/textPrimary"
                                    android:textSize="10dp" />


                                <TextView
                                    android:id="@+id/tv_del_bussiness"
                                    android:layout_width="0dp"
                                    android:layout_height="20dp"
                                    android:layout_marginLeft="1dp"
                                    android:layout_marginRight="1dp"
                                    android:layout_weight="2"
                                    android:background="@color/white"
                                    android:gravity="center"
                                    android:lines="1"
                                    android:text=""
                                    android:textColor="@color/textPrimary"
                                    android:textSize="10dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="1dp">

                                <TextView
                                    android:id="@+id/tv_line_title_viewsales"
                                    android:layout_width="0dp"
                                    android:layout_height="20dp"
                                    android:layout_weight="1"
                                    android:background="@color/white"
                                    android:gravity="center"
                                    android:text="@string/viewsalesorder_txt_title_line"
                                    android:textColor="@color/textPrimary"
                                    android:textSize="10dp" />


                                <TextView
                                    android:id="@+id/tv_del_line"
                                    android:layout_width="0dp"
                                    android:layout_height="20dp"
                                    android:layout_marginLeft="1dp"
                                    android:layout_marginRight="1dp"
                                    android:layout_weight="2"
                                    android:background="@color/white"
                                    android:gravity="center"
                                    android:lines="1"
                                    android:text=""
                                    android:textColor="@color/textPrimary"
                                    android:textSize="10dp" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>
            <!-- =======================fourth layout  end========================-->

            <!-- =======================product details end========================-->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_sales_order_product_list"
                android:layout_width="355dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:background="@color/white"
                android:nestedScrollingEnabled="false" />
            <!-- =======================product details end========================-->


            <LinearLayout
                android:layout_width="356dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="5dp">


                <TextView
                    android:id="@+id/tv_available_title_view_order"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:shadowColor="#00ccff"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="5"
                    android:text="@string/viewsalesorder_txt_title_available_scheme"
                    android:textColor="#c0392b"
                    android:textSize="18sp"
                    android:textStyle="bold" />


                <Button
                    android:id="@+id/btn_check_scheme_view_order"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_border_rectangle"
                    android:text="@string/viewsalesorder_btn_title_check_scheme"
                    android:visibility="gone"
                    android:textAllCaps="false"
                    android:textSize="14sp" />

            </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_scheme_list_view_order"
                android:layout_width="356dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:nestedScrollingEnabled="false"
                tools:itemCount="1"
                tools:listitem="@layout/entity_schemes_list" />


            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimary"
                android:orientation="horizontal"
                android:padding="2dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_total_scheme_order_value_title_viewsales"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:gravity="center"
                        android:lines="2"
                        android:padding="1dp"
                        android:text="@string/viewsalesorder_txt_title_total_scheme_norder_value"
                        android:textColor="@color/textPrimary"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/tv_total_scheme_order_value_view_order"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:gravity="center"
                        android:lines="2"
                        android:padding="1dp"
                        android:text="0"
                        android:textColor="@color/textPrimary"
                        android:textSize="10dp"
                        android:textStyle="bold" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_total_discount_value_title_viewsales"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:gravity="center"
                        android:lines="2"
                        android:padding="1dp"
                        android:text="@string/viewsalesorder_txt_title_total_discount_value"
                        android:textColor="@color/textPrimary"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/tv_total_discount_value_view_order"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:gravity="center"
                        android:lines="2"
                        android:padding="1dp"
                        android:text="0"
                        android:textColor="@color/textPrimary"
                        android:textSize="10dp"
                        android:textStyle="bold" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_fail_reason"
                android:layout_width="356dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:paddingStart="1dp"
                android:paddingEnd="1dp"
                android:paddingBottom="1dp">

                <TextView
                    android:id="@+id/tv_reasonfordeliveryfail_title_viewsales"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="@string/viewsalesorder_txt_title_reason_for_n_delivery_fail"
                    android:textColor="@color/textPrimary"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/spinner_border">

                    <Spinner
                        android:id="@+id/spn_delivery_fail_reason"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_delivery_fail_reason"
                android:layout_width="356dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:paddingStart="1dp"
                android:paddingEnd="1dp"
                android:paddingBottom="1dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_deliveryfailreason_vieworder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="@string/viewsalesorder_txt_title_delivery_n_fail_reason"
                    android:textColor="@color/textPrimary"
                    android:textSize="12sp" />


                <TextView
                    android:id="@+id/tv_del_fail_reason"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:background="@drawable/spinner_border"
                    android:gravity="start"
                    android:lines="2"
                    android:text="@string/viewsalesorder_txt_title_reason_for_delivery_fail"
                    android:textColor="@color/textPrimary"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_confirm_buttons"
                android:layout_width="356dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:padding="5dp">

                <Button
                    android:id="@+id/btn_confirm_fail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="@string/viewsalesorder_txt_btn_confirmation_fail_order"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/btn_redelivery"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:text="@string/viewsalesorder_btn_title_sending_redelivery"
                    android:textSize="12sp" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_submit_update_order"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:text="@string/viewsalesorder_txt_title_submit"
                android:textSize="14sp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


